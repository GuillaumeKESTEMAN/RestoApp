{% extends 'base.html.twig' %}

{% block title %}
    Restaurants
{% endblock %}

{% block body %}

    <div class="wrapper">
        {% include('navbar.html.twig') %}

        <h3>Restaurants :</h3>
        <ul>
            {% for restaurant in restaurants %}
                <li><a href="{{ path('get_restaurant', {id: restaurant.getId()}) }}">{{ restaurant.name }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
